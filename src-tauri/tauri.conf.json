{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "pomodoro",
  "version": "1.0.0",
  "identifier": "com.pomodoro.app",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Pomodoro - Boost your productivity",
        "width": 800,
        "height": 600,
        "minHeight": 600,
        "minWidth": 800,
        "center": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": ["icons/logo.png", "icons/icon.ico"]
  }
}
